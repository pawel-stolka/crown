  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "target": "es2016",
    "types": ["jest", "node"],
    "paths": {
      // defer
      "@crown/admin": ["libs/admin/src/index.ts"],
      "@crown/auth": ["libs/auth/src/index.ts"],
      "@crown/api": ["libs/shared/src/index"],
      "@crown/data": ["libs/data/src/index.ts"],
      "@crown/login": ["libs/auth/src/index.ts"],
      "@crown/material": ["libs/material/src/index.ts"],
